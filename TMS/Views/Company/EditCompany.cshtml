@model TMS.Models.Company

@{
    ViewBag.Title = "Company Setup";
}

<div class="page-content">
    <div class="page-bar">
        <div class="page-title-breadcrumb">
            <div class=" pull-left">
                <div class="page-title">Company Setup</div>
            </div>
            <ol class="breadcrumb page-breadcrumb pull-right">
                <li>
                    <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="@Url.Action("Index","WebsiteDashboard")">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a class="parent-item" href="@Url.Action("CompanyList","Company")">Company List</a>&nbsp;<i class="fa fa-angle-right"></i>
                </li>
                <li class="active">Company Setup</li>
            </ol>
        </div>
    </div>
    <!-- start widget -->
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                @using (Html.BeginForm("EditCompany", "Company", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="card-body" id="bar-parent1">
                        <form action="#" id="form_sample_1" class="form-horizontal" novalidate>
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Company @Html.HiddenFor(model => model.ID_COMPANY)
                                        <span class="required" aria-required="true"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.COMPANY_NAME, new { htmlAttributes = new { @class = "form-control", @required = "required", maxlength = "80" } })
                                        @Html.ValidationMessageFor(model => model.COMPANY_NAME, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Phone
                                    </label>
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.PHONE1, new { htmlAttributes = new { @class = "form-control", maxlength = "12" } })
                                        @Html.ValidationMessageFor(model => model.PHONE1, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Email
                                    </label>
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.EMAIL1, new { htmlAttributes = new { @class = "form-control", maxlength = "80" } })
                                        @Html.ValidationMessageFor(model => model.EMAIL1, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Maps URL
                                    </label>
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.MAPS_URL, new { htmlAttributes = new { @class = "form-control", maxlength = "400" } })
                                        @Html.ValidationMessageFor(model => model.MAPS_URL, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Address
                                    </label>
                                    <div class="col-md-4">
                                        @Html.TextAreaFor(model => model.ADDRESS, new { @class = "form-control", @rows = 1, maxlength = "150" })
                                        @Html.ValidationMessageFor(model => model.ADDRESS, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="clearfix"></div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        City
                                    </label>
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.CITY, new { htmlAttributes = new { @class = "form-control", maxlength = "20" } })
                                        @Html.ValidationMessageFor(model => model.CITY, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="clearfix"></div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Logo
                                    </label>
                                    <div class="col-md-4">
                                        @if (Model.CAPTION.IsEmpty())
                                        {

                                        }
                                        else
                                        {
                                            <img src="~/Images/companyLogo/@Model.CAPTION" style="max-height:200px;width:auto;" />
                                        }
                                        @Html.EditorFor(model => model.PROFILE_IMG, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.TextBox("fileX", "", new { @class = "form-control", type = "file", accept = ".png,.jpg,.jpeg,.gif,.tif" })
                                        @Html.ValidationMessageFor(model => model.PROFILE_IMG, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="form-actions">
                                <div class="col-md-12 text-center">
                                    <button type="submit" class="btn btn-primary">Submit</button>

                                    @Html.ActionLink("Cancel", "CompanyList", new { controller = "Company" }, new { @class = "btn btn-default" })
                                </div>
                            </div>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>

</div>
