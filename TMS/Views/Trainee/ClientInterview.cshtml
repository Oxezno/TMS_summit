@model TMS.Models.PCInterview

@{
    ViewBag.Title = "Client Interview";
}

<div class="page-content">
    <div class="page-bar">
        <div class="page-title-breadcrumb">
            <div class=" pull-left">
                <div class="page-title">Client Interview</div>
            </div>
            <ol class="breadcrumb page-breadcrumb pull-right">
                <li>
                    <i class="fa fa-home"></i>&nbsp;<i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a class="parent-item" href="@Url.Action("TraineePortal","Trainee")">Profile</a>&nbsp;<i class="fa fa-angle-right"></i>
                </li>
                <li class="active">Client Interview</li>
            </ol>
        </div>
    </div>
    @using (Ajax.BeginForm("ClientInterview", "Trainee", new AjaxOptions() { HttpMethod = "POST" }, new { enctype = "multipart/form-data", id = "FileForm" }))
    {
        @Html.AntiForgeryToken()
    <!-- start widget -->
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-head">
                        <div class="col-md-6">

                        </div>

                        <div class="col-md-6 pull-right text-right" style="margin-top:5px;">
                            <h5>Profile Name: @Model.ProfileName @Html.HiddenFor(model => model.ProfileUserId) @Html.HiddenFor(model => model.pcId) &nbsp;&nbsp;</h5>
                        </div>
                    </div>
                    <div class="card-body" id="bar-parent1">
                        <form action="#" id="form_sample_1" class="form-horizontal" novalidate>
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="control-label col-md-3">
                                        Interview Date
                                        <span class="required" aria-required="true"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            @Html.ValidationMessageFor(model => model.InverviewDt, "", new { @class = "field-validation-error" })

                                            <span class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                            @Html.TextBoxFor(model => model.InverviewDt, "{0:yyyy-MM-dd}", htmlAttributes: new { @class = "form-control", @type = "date", placeholder = "MM/dd/yyyy", @id = "txtInverviewDt" })
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">
                                        Client Name
                                        <span class="required" aria-required="true"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.ValidationMessageFor(model => model.ClientName, "", new { @class = "field-validation-error" })
                                        @Html.TextBoxFor(model => model.ClientName, htmlAttributes: new { @class = "form-control", placeholder = "Client Name", @id = "txtClientName" })
                                    </div>
                                    <div class="clearfix"></div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">
                                        Notes
                                    </label>
                                    <div class="col-md-9">
                                        @Html.TextAreaFor(model => model.Notes, htmlAttributes: new { @class = "form-control sw-placeholder", placeholder = "Notes", @id = "txtNotes" })
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        <button type="submit" class="btn btn-primary">Submit</button>

                                        @Html.ActionLink("Cancel", "TraineePortal", new { controller = "Trainee" }, new { @class = "btn btn-default" })
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>