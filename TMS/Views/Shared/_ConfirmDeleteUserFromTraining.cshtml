<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                &times;
            </button>

            <h5 class="modal-title" id="exampleModalLabel">Confirm</h5>
        </div>
        <div class="modal-body">
            @{
                var Id = ViewBag.ID;
            }
            @using (Ajax.BeginForm("ConfirmDeleteUserFromTraining", "TrainingCours", new { uID = (int)ViewBag.userID,tID = (int)ViewBag.tID }, new AjaxOptions { OnSuccess = "Response" }))
            {
                <div class="clearfix m-b-5"></div>
                <div class="col text-red" style="text-align:center;">
                    <strong>Are you sure you want to Remove @ViewBag.fName from this Training Course?</strong>
                </div>
                <div class="clearfix m-b-5"></div>

                <div class="col-lg-12 text-center m-t-10">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> &nbsp;
                    <input type="submit" value="Confirm" class="btn btn-primary" onclick="fnRemoveUserFromLists(@ViewBag.tID , @ViewBag.userID)" />
                </div>

                <div class="clearfix"></div>
            }
            <div class="clearfix"></div>

        </div>

    </div>
</div>