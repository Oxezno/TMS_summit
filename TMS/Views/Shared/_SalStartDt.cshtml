@model TMS.Models.ProfileUser
<div class="modal-dialog">
    <div class="modal-content">


        <div class="modal-header">

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                &times;
            </button>

            <h5 class="modal-title" id="exampleModalLabel">Salary Start Date</h5>
        </div>
        <div class="modal-body">
            @{
                var Id = ViewBag.ID;
                var BatchId = ViewBag.BatchId;
                var Filter = ViewBag.filter;
            }
            @using (Ajax.BeginForm("ProfileSalStartDtSubmit", "Home", new { PID = Id, BatchId = BatchId, Filter = Filter }, new AjaxOptions { OnSuccess = "Response" }))
            {
                <div class="clearfix m-b-5"></div>
                <div class="col text-red" style="text-align:center;">
                    @if (ViewBag.ConfMsg != null)
                    {
                        <strong>@ViewBag.ConfMsg</strong>
                    }
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">
                        Start Date
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </span>
                            @Html.TextBoxFor(model => model.SalStartDt, "{0:MM/dd/yyyy}", htmlAttributes: new { @class = "form-control", @type = "date", placeholder = "MM/dd/yyyy", @id = "txtBatchStartDt" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">
                        Salary
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.Salary, htmlAttributes: new { @class = "form-control", placeholder = "Salary", @id = "txtSal" })
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix m-b-5"></div>

                <div class="col-lg-12 text-center m-t-10">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> &nbsp;
                    <input type="submit" value="Confirm" class="btn btn-primary" />
                </div>

                <div class="clearfix"></div>
            }
            <div class="clearfix"></div>

        </div>

    </div>
</div>

