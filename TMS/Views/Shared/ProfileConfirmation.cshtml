@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <title>Thank You!</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="" />

    <style type="text/css">

        body {
            font-family: Arial, Helvetica, sans-serif;
            width: 100%;
            background: #fff;
            text-align: center;
            margin: 0;
            padding: 0;
        }

        h1 {
            font-size: 26px;
            color: #333;
            margin: 16px 0px;
            text-transform: uppercase;
            text-align: center;
            font-family: Arial, Helvetica, sans-serif;
            letter-spacing: 5px;
        }

        h4 {
            font-size: 16px;
            color: #333;
        }

        .top {
            background: #09F;
            height: 40px;
            display: block;
        }

        .bottom {
            background: #09F;
            position: fixed;
            bottom: 0;
            width: 100%;
            height: 80px;
            display: block;
        }

        .main-wthree {
            width: 80%;
            margin: 12% auto;
            background: #fff;
            border: 10px solid #FFFDFE;
            padding: 30px 20px;
            text-align: center;
        }

            .main-wthree h2 {
                font-size: 200px;
                color: #F4F4F9;
                margin-top: 40px;
                margin: 0;
                font-family: Arial, Helvetica, sans-serif;
            }

            .main-wthree p {
                font-size: 18px;
                margin-top: 23px;
                color: rgba(0, 0, 0, 0.59);
                letter-spacing: 2px;
            }

            .main-wthree button {
                background: #71c341;
                padding: 14px;
                width: 100%;
                color: #fff;
                border: none;
                border-radius: 5px;
            }

        .sub-info {
            font-size: 25px;
            margin-bottom: 60px;
            color: #e6e6e6;
        }

        .success-icon {
            width: 150px;
            padding: 15px;
            margin: 0 auto;
            margin-top: -100px;
        }

            .success-icon img {
                width: 100%;
                margin: 0 auto;
            }
    </style>
</head>
<body>
    <div class="top"></div>


    <div class="main-wthree">
        <div class="success-icon"><img src="~/images/success.png"></div>
        <h1>Success</h1>
        <h4>Thanks for Submiting your information</h4>
    </div> 
    <div class="bottom"></div>
</body>
</html>

